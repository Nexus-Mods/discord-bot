{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",        // Use ES modules
    "moduleResolution": "node", // Use Node.js module resolution logic
    "esModuleInterop": true,    // Enable compatibility for ES modules
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Allow importing JSON files
    "outDir": "./dist",         // Output folder
    "baseUrl": "./src",         // Base URL for module resolution
    "rootDir": "./src",         // Root directory of the source files
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}